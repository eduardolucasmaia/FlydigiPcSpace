<UserControl x:Class="WPFTest.UserControls.UserControlLineJoystickDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFTest.UserControls"
             Width="120" Height="120">
    <Grid Name="mGrid" Width="120" Height="120">
        <Panel.Background>
            <ImageBrush ImageSource="/Resources/bg_grid_small_num.png"/>
        </Panel.Background>
        <Grid Margin="2,0,0,3" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Panel.Background>
                <ImageBrush ImageSource="/Resources/bg_grid_small.png"/>
            </Panel.Background>
            <Canvas Name="mCanvas" Width="110" Height="110">
                <Line Name="mLine1" X1="0" Y1="0" X2="0" Y2="0" Stroke="#0074FF" StrokeThickness="1"/>
                <Line Name="mLine2" X1="0" Y1="0" X2="0" Y2="0" Stroke="#0074FF" StrokeThickness="1"/>
                <Line Name="mLine3" X1="0" Y1="0" X2="0" Y2="0" Stroke="#0074FF" StrokeThickness="1"/>
            </Canvas>
        </Grid>
    </Grid>
</UserControl>