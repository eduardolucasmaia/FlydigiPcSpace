<UserControl x:Class="WPFTest.UserControls.UserControlSelectMenuColor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFTest.UserControls"
             Height="24" Background="#232323">
    <Border Name="mBorder" BorderThickness="1" BorderBrush="#26ffffff" Background="#232323">
        <Grid>
            <Label Name="mLabelColor" Width="14" Height="14" Margin="10,0,0,0" Background="#0074ff"
             VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
            <Label Name="mLabelRGB" Content="#0074FF" Margin="30,0,0,0" Padding="0,0,0,0" Foreground="White"
             FontSize="13" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
            <Image Name="mImage" Width="10" Height="10" Margin="0,0,10,0"
             Source="/Resources/icon_arrow_down_white.png" HorizontalAlignment="Right"
             VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>