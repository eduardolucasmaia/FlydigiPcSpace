<UserControl x:Class="WPFTest.UserControls.UserControlLedColor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFTest.UserControls"
             MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" Width="132" Height="24">
    <Border Name="mBorder" BorderBrush="#0074ff" BorderThickness="0" Background="#19868788">
        <Grid>
            <StackPanel Orientation="Horizontal">
                <Label Content="{DynamicResource color}" Width="66" Padding="0" Foreground="White"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12"/>
                <Label Name="mLabelColor0" Width="12" Height="12" Background="Transparent" Margin="17,0,0,0"/>
                <Label Name="mLabelColor1" Width="12" Height="12" Background="Transparent" Margin="8,0,0,0"/>
            </StackPanel>
            <Image Source="/Resources/icon_arrow_right_white.png" Width="8" Height="8"/>
        </Grid>
    </Border>
</UserControl>